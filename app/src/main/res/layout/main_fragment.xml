<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <Button
        android:id="@+id/sniff_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Notification Sniffing Here"
        app:layout_constraintBottom_toTopOf="@+id/trigger_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/trigger_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TODO: Add Alert Triggers"
        app:layout_constraintBottom_toTopOf="@+id/muffle_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sniff_btn" />

    <Button
        android:id="@+id/muffle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TODO: Add Alert Mufflers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trigger_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>
